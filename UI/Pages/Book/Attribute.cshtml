@page "{handler?}/{id?}"
@model UI.Pages.Book.AttributeModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attributes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Attributes.BookId" type="hidden" />
            <div class="form-group">
                <label asp-for="Attributes.AttributeName.Name" class="control-label"></label>
                <input asp-for="Attributes.AttributeName.Name" value="@TempData["Name"]" class="form-control" />
                <span asp-validation-for="Attributes.AttributeName.Name" class="text-danger"></span>
                @if (TempData["CategoryAmountError"] != null)
                {
                    <div class="alert alert-danger" role="alert">@TempData["CategoryAmountError"]</div>
                }
            </div>
            <div class="form-group">
                <label asp-for="Attributes.Value" class="control-label"></label>
                <input asp-for="Attributes.Value" value="@TempData["Value"]" class="form-control" />
                <span asp-validation-for="Attributes.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
